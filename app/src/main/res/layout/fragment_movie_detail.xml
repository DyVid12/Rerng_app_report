<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Movie Poster -->
        <ImageView
            android:id="@+id/moviePoster"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@color/gray" />

        <!-- Movie Title -->
        <TextView
            android:id="@+id/movieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Movie Title"
            android:layout_marginBottom="4dp" />

        <!-- Release Date & Rating -->
        <TextView
            android:id="@+id/movieReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:text="Release Date: 2025-02-24"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/movieRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFB200"
            android:text="â­ 8.5/10"
            android:layout_marginBottom="12dp" />

        <!-- Overview Section -->
        <TextView
            android:text="Overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/movieDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="Movie overview goes here..."
            android:layout_marginBottom="16dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/watchTrailerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¬ Watch Trailer"
                android:backgroundTint="#FFB200"
                android:textColor="@color/black"
                android:padding="10dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/addToWatchlistButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âž• Add to Watchlist"
                android:backgroundTint="@color/gray"
                android:textColor="@color/white"
                android:padding="10dp" />
        </LinearLayout>

        <!-- Reviews Section -->
        <TextView
            android:text="User Reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/reviewsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/darker_gray"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/reviewUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User: John Doe"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/reviewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â­ 9/10"
                android:textSize="16sp"
                android:textColor="#FFB200"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/reviewComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This movie was amazing! Highly recommend!"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Add Review Button -->
        <Button
            android:id="@+id/addReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Add Review"
            android:backgroundTint="#FFB200"
            android:textColor="@color/black"
            android:padding="10dp" />
    </LinearLayout>
</ScrollView>
