<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSearchResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="10dp"/>

        <!-- Movie Categories -->
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Best Movie"
            android:textColor="#FFD700"
            android:layout_marginBottom="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Category"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#FFD700"/>

        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/Allbtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="All"/>

                <Button
                    android:id="@+id/Actionbtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Action"/>

                <Button
                    android:id="@+id/Adventurebtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Adventure"/>

                <Button
                    android:id="@+id/Comedybtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Comedy"/>

                <Button
                    android:id="@+id/Dramabtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Drama"/>

                <Button
                    android:id="@+id/Horrorbtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Horror"/>

                <Button
                    android:id="@+id/SciFibtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Sci-Fi"/>

                <Button
                    android:id="@+id/Fantasybtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Fantasy"/>

                <Button
                    android:id="@+id/Romancebtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Romance"/>

                <Button
                    android:id="@+id/Thrillerbtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Thriller"/>

                <Button
                    android:id="@+id/Animationbtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="Animation"/>

                <Button
                    android:id="@+id/Warbtn"
                    android:layout_marginRight="10dp"
                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:text="War"/>

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container"
            android:orientation="vertical">

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>

