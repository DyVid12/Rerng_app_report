<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#121212"
    android:padding="20dp"
    tools:context=".MovieDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Movie Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="#1E1E1E"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:radius="10dp">

            <!-- Movie Details -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgMoviePoster"
                android:layout_width="140dp"
                android:layout_height="200dp"
                android:layout_marginRight="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/begman"
                app:shapeAppearanceOverlay="@style/RoundedCorners" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMovieTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Title"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtReleaseDate"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Release Date: YYYY-MM-DD"
                    android:textColor="#E0E0E0"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="⭐ 8.5/10"
                    android:textColor="#F4C518"
                    android:textSize="20sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Overview Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overview"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/txtOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a test overview."
            android:textSize="14sp"
            android:textColor="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Watch Trailer Button -->
        <Button
            android:id="@+id/btnWatchTrailer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎬 Watch Trailer"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="#F4C518"
            android:textColor="#000000"
            android:layout_marginBottom="20dp" />

        <!-- Reviews Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reviews"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                    >

            <LinearLayout
                android:id="@+id/reviewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- This TextView is the placeholder that will be replaced -->
                <TextView
                    android:id="@+id/txtReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1E1E1E"
                    android:elevation="2dp"
                    android:padding="10dp"
                    android:text="No reviews yet."
                    android:textColor="#E0E0E0"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

        <!-- Buttons Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnAddReview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📝 Add Review"
                android:backgroundTint="#F4C518"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAddToWatchlist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="➕ Add to Favorite"
                android:backgroundTint="#FFFFFF"
                android:textColor="#121212"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Back to Movie List -->
        <TextView
            android:id="@+id/txtBackToList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⬅ Back to Movie List"
            android:textSize="14sp"
            android:textColor="#F4C518"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</ScrollView>
