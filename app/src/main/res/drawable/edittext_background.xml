<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/gray_500" />

    <!-- Border -->
    <stroke
        android:color="#FFFFFF"
        android:width="1dp" />

    <!-- Rounded corners -->
    <corners android:radius="15dp" />

    <!-- Padding (optional) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
